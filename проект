        // Function to open subpage
        function openSubpage(pageId) {
            if (subpages[pageId]) {
                subpageTitle.textContent = subpages[pageId].title;
                subpageContent.innerHTML = subpages[pageId].content;
                subpageModal.classList.remove('hidden');
                document.body.style.overflow = 'hidden';
            }
        }
        
        // Function to close subpage
        function closeSubpage() {
            subpageModal.classList.add('hidden');
            document.body.style.overflow = 'auto';
        }
        
        // Close modal handlers
        closeSubpageButtons.forEach(button => {
            button.addEventListener('click', closeSubpage);
        });
        
        // Close modal when clicking outside content
        subpageModal.addEventListener('click', (e) => {
            if (e.target === subpageModal) {
                closeSubpage();
            }
        });
        
        // Add event listeners to service cards
        document.addEventListener('DOMContentLoaded', () => {
            const serviceCards = document.querySelectorAll('.service-card');
            serviceCards.forEach(card => {
                card.addEventListener('click', () => {
                    const serviceId = card.getAttribute('data-service');
                    openSubpage(serviceId);
                });
            });
        });

