         // Добавляем обработчики для карточек врачей
         document.addEventListener('DOMContentLoaded', () => {
            // Для услуг
            const serviceCards = document.querySelectorAll('.service-card');
            serviceCards.forEach(card => {
                card.addEventListener('click', () => {
                    const serviceId = card.getAttribute('data-service');
                    openSubpage(serviceId);
                });
            });

            // Для врачей
            const doctorCards = document.querySelectorAll('.doctor-card');
            doctorCards.forEach(card => {
                card.addEventListener('click', () => {
                    const doctorId = card.getAttribute('data-doctor');
                    if (doctors[doctorId]) {
                        subpageTitle.textContent = `${doctors[doctorId].name} - ${doctors[doctorId].specialty}`;
                        subpageContent.innerHTML = doctors[doctorId].content;
                        subpageModal.classList.remove('hidden');
                        document.body.style.overflow = 'hidden';
                    }
                });
            });
        });
        // Добавлен скрипт для обработки отзывов
        document.addEventListener('DOMContentLoaded', function() {
            // Обработка кнопки "Оставить отзыв"
            const addTestimonialBtn = document.querySelector('.bg-blue-600.hover\\:bg-blue-700');
            if (addTestimonialBtn) {
                addTestimonialBtn.addEventListener('click', function() {
                    // Здесь можно добавить логику для открытия формы добавления отзыва
                    alert('Форма для добавления отзыва будет открыта. В реальном проекте здесь будет модальное окно с формой.');
                });
            }
            
            // Обработка навигации по отзывам
            const testimonialDots = document.querySelectorAll('.flex.justify-center.mt-8 button');
            testimonialDots.forEach((dot, index) => {
                dot.addEventListener('click', function() {
                    // Здесь можно добавить логику для переключения отзывов
                    testimonialDots.forEach(d => d.classList.replace('bg-blue-600', 'bg-blue-200'));
                    this.classList.replace('bg-blue-200', 'bg-blue-600');
                    console.log('Показать отзыв', index + 1);
                });
            });
        });
    </script>
</body>
</html>
